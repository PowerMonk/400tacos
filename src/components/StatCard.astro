---
interface Props {
  titulo: string;
  valor: string | number;
  icono: string;
  color?: "blue" | "green" | "red" | "orange";
}

const { titulo, valor, icono, color = "blue" } = Astro.props;

const colorClasses: Record<string, string> = {
  blue: "bg-blue-500 text-blue-100",
  green: "bg-green-500 text-green-100",
  red: "bg-red-500 text-red-100",
  orange: "bg-orange-500 text-orange-100",
};
---

<div class="bg-white rounded-lg shadow-md p-6 text-center">
  <div
    class={`inline-flex items-center justify-center w-12 h-12 rounded-full mb-4 ${colorClasses[color]}`}
  >
    <span class="text-xl">{icono}</span>
  </div>
  <h3 class="text-lg font-semibold text-gray-800 mb-2">{titulo}</h3>
  <p class="text-3xl font-bold text-gray-900">{valor}</p>
</div>
